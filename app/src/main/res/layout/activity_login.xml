<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
>
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:layout_gravity="center_horizontal"
              android:text="欢迎登录"
              android:textSize="40dp"
              android:textColor="@color/purple_200"
              android:layout_marginTop="200dp"/>

    <EditText android:layout_width="320dp" android:layout_height="60dp"
              android:text="请输入账号"
              android:layout_gravity="center_horizontal"
              android:layout_marginTop="30dp"
              android:id="@+id/username" android:background="@drawable/login_div_bg"
    android:paddingLeft="15dp"/>

    <EditText android:layout_width="320dp" android:layout_height="60dp"
              android:layout_gravity="center_horizontal"
              android:background="@drawable/login_div_bg"
              android:text="请输入密码"
              android:id="@+id/password"
              android:paddingLeft="15dp"
    android:layout_marginTop="10dp"/>

    <Button android:layout_width="100dp" android:layout_height="wrap_content"
            android:id="@+id/loginBtn"
            android:layout_gravity="center_horizontal"
            android:text="登录到音频页"
            android:layout_marginTop="10dp"
            android:background="@color/teal_200"
    />

    <Button android:layout_width="100dp" android:layout_height="wrap_content"
            android:id="@+id/videoBtn"
            android:layout_gravity="center_horizontal"
            android:text="登录到视频页"
            android:layout_marginTop="10dp"
            android:background="@color/teal_200"
    />



</LinearLayout>